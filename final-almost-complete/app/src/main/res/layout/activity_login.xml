<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="260dp"
        android:layout_marginTop="65dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ref" />

    <!--
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/custom_font_family"
            android:text="냉실장"
            android:textColor="@color/black"
            android:textSize="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/id_tv"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />
            -->

    <EditText
        android:id="@+id/id_tv"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="68dp"
        android:layout_marginBottom="17dp"
        android:fontFamily="@font/custom_font_family"
        android:hint="  아이디"
        app:layout_constraintBottom_toTopOf="@+id/pw_tv"
        app:layout_constraintStart_toEndOf="@+id/id_imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/pw_tv"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/custom_font_family"
        android:hint="  비밀번호"
        android:inputType="textPassword"
        app:layout_constraintEnd_toStartOf="@+id/login_btn"
        app:layout_constraintStart_toEndOf="@+id/pw_imageView"
        app:layout_constraintTop_toBottomOf="@+id/id_tv" />

    <ImageView
        android:id="@+id/id_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toStartOf="@+id/id_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/envelope_20" />

    <ImageView
        android:id="@+id/pw_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toStartOf="@+id/pw_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_imageView"
        app:srcCompat="@drawable/lock_20" />

    <ImageButton
        android:id="@+id/login_btn"
        android:layout_width="42dp"
        android:layout_height="47dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="28dp"
        android:background="@color/white"
        android:padding="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/id_tv"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/login" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="95dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="10dp"
        android:text="아직 회원이 아니신가요? --> "
        android:fontFamily="@font/custom_font_family"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/register_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pw_tv" />

    <ImageButton
        android:id="@+id/register_btn"
        android:layout_width="41dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="95dp"
        android:background="@color/white"
        android:padding="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/pw_tv"
        app:srcCompat="@drawable/register" />


</androidx.constraintlayout.widget.ConstraintLayout>